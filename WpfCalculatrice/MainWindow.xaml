<Window x:Class="WpfCalculatrice.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfCalculatrice"
        mc:Ignorable="d"
        Title="Calculatrice" Height="350" Width="525">
    <Grid>
        <TextBox x:Name="tbxNombre1" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Margin="93,61,0,0"/>
        <TextBox x:Name="tbxNombre2" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Margin="93,102,0,0"/>
        <Button x:Name="btnAdd" Content="+" HorizontalAlignment="Left" VerticalAlignment="Top" Width="48" Margin="40,167,0,0" Click="btnAdd_Click"/>
        <Button x:Name="btnSub" Content="-" HorizontalAlignment="Left" VerticalAlignment="Top" Width="48" Margin="93,167,0,0"/>
        <Button x:Name="btnMult" Content="*" HorizontalAlignment="Left" VerticalAlignment="Top" Width="48" Margin="216,167,0,0"/>
        <Button x:Name="btnDiv" Content="/" HorizontalAlignment="Left" VerticalAlignment="Top" Width="48" Margin="165,167,0,0"/>
        <Label x:Name="lblReponse" Content="Label" HorizontalAlignment="Left" Margin="93,216,0,0" VerticalAlignment="Top" Width="120" Height="27"/>

    </Grid>
</Window>
